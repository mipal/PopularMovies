<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:scrollbars="none" >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.cyanshift.popularmovies.DetailActivityFragment">


        <TextView android:text="@string/hello_world"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/detail_title_textview"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/dim_foreground_material_dark"
            android:textSize="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            />


        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:id="@+id/detail_poster_imageview"
            android:layout_alignTop="@+id/detail_releasedate_textview"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/detail_releasedate_textview"
            android:layout_below="@+id/detail_title_textview"
            android:layout_toRightOf="@id/detail_poster_imageview"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="26dp"
            android:layout_alignRight="@+id/detail_title_textview"
            android:layout_alignEnd="@+id/detail_title_textview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/detail_rating_textview"
            android:layout_below="@+id/detail_releasedate_textview"
            android:layout_alignLeft="@+id/detail_releasedate_textview"
            android:layout_alignStart="@+id/detail_releasedate_textview"
            android:layout_marginTop="30dp"
            android:layout_alignRight="@+id/detail_releasedate_textview"
            android:layout_alignEnd="@+id/detail_releasedate_textview" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/detail_plot_textview"
            android:layout_below="@+id/detail_poster_imageview"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark as Favorite"
            android:id="@+id/button"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/detail_title_textview"
            android:layout_alignEnd="@+id/detail_title_textview"
            android:onClick="clickedButton"/>


    </RelativeLayout>

    </ScrollView>


